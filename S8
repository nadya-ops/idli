Q8.1#include <stdio.h> 
#include <unistd.h> 
#include <fcntl.h> 
int main() { 
int fd = open("output.txt", O_WRONLY | O_CREAT | O_TRUNC, 0666); 
dup2(fd, 1);   // redirect stdout 
close(fd); 
printf("Output redirected to output.txt\n"); 
return 0; 
} 
Q8.2#include <stdio.h> 
#include <unistd.h> 
int main() { 
int p[2]; 
pipe(p); 
if (fork() == 0) {         
dup2(p[1], 1); 
close(p[0]); 
 // Child 1 → ls -l 
execlp("ls", "ls", "-l", NULL); 
} 
if (fork() == 0) {         
dup2(p[0], 0); 
close(p[1]); 
 // Child 2 → wc -l 
execlp("wc", "wc", "-l", NULL); 
} 
close(p[0]); 
close(p[1]); 
wait(NULL); 
wait(NULL); 
return 0; 
}
