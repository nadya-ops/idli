 slip16.1
 #include <stdio.h>
 #include <dirent.h>
 #include <sys/stat.h>
 #include <time.h>
 int main() {
    DIR *dp = opendir(".");
    struct dirent *d;
    struct stat st;
    struct tm *tm;
    int month;
    printf("Enter month number (1-12): "); scanf("%d",&month);
    while((d = readdir(dp))) {
        if(stat(d->d_name,&st)==0) {
            tm = localtime(&st.st_ctime); // file creation time
            if(tm->tm_mon + 1 == month)
                printf("%s\n", d->d_name);
        }
    }
    closedir(dp);
    return 0;
 }
slip16.2
 #include <stdio.h>
 #include <stdlib.h>
 #include <unistd.h>
 #include <signal.h>
 void handler(int sig) {
    if(sig==SIGHUP) printf("Child caught SIGHUP\n");
    else if(sig==SIGINT) printf("Child caught SIGINT\n");
    else if(sig==SIGQUIT) {
        printf("My DADDY has Killed me!!!\n");
        exit(0);
    }
 }
 int main() {
    signal(SIGHUP, handler);
    signal(SIGINT, handler);
    signal(SIGQUIT, handler);
    pid_t child = fork();
    if(child == 0) {  // Child process
        while(1) pause(); // wait for signals
    } else {  // Parent process
        for(int i=0;i<10;i++) { // send signals every 3 sec for 30 sec
            sleep(3);
            if(i%2==0) kill(child,SIGHUP);
            else kill(child,SIGINT);
        }
        kill(child,SIGQUIT); // final signal
    }
    return 0;
 }
