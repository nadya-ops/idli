Q11.1#include <stdio.h> 
#include <sys/resource.h> 
int main() { 
struct rlimit r; 
getrlimit(RLIMIT_FSIZE, &r); 
printf("Current file size limit: %ld\n", r.rlim_cur); 
r.rlim_cur = 2048;            
 // set new soft limit 
setrlimit(RLIMIT_FSIZE, &r); 
getrlimit(RLIMIT_FSIZE, &r); 
printf("New file size limit: %ld\n", r.rlim_cur); 
return 0; 
} 
Q11.2#include <stdio.h> 
#include <unistd.h> 
#include <fcntl.h> 
int main() { 
int fd = open("output.txt", O_CREAT | O_WRONLY | O_TRUNC, 0666); 
dup2(fd, 1);   // redirect stdout to file 
close(fd); 
printf("Output redirected to output.txt\n"); 
return 0; 
}
