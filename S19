 slip19.1
 #include <stdio.h>
 #include <sys/stat.h>
 void print_type(mode_t mode){
    if(S_ISREG(mode)) printf("Regular File\n");
    else if(S_ISDIR(mode)) printf("Directory\n");
    else if(S_ISLNK(mode)) printf("Symbolic Link\n");
    else printf("Other\n");
}
 int main(int argc, char *argv[]){
    struct stat st;
    for(int i=1;i<argc;i++){
        if(stat(argv[i], &st)==0){
            printf("File: %s\n", argv[i]);
            printf("Inode: %ld, Type: ", st.st_ino);
            print_type(st.st_mode);
        } else printf("Cannot access %s\n", argv[i]);
    }
    return 0;
 }
 slip19.2
 #include <stdio.h>
 #include <unistd.h>
 #include <sys/wait.h>
 int main(){
    int fd[2];
    pipe(fd);
    if(fork()==0){ // ls -l
        dup2(fd[1], 1);
        close(fd[0]); close(fd[1]);
        execlp("ls","ls","-l",NULL);
    } else if(fork()==0){ // wc -l
        dup2(fd[0], 0);
        close(fd[0]); close(fd[1]);
        execlp("wc","wc","-l",NULL);
    } else { // parent
        close(fd[0]); close(fd[1]);
        wait(NULL); wait(NULL);
    }
    return 0;
 }
