Q4.1#include <stdio.h> 
#include <dirent.h> 
#include <string.h> 
int main(int argc, char *argv[]) 
{ 
if (argc < 2) { 
printf("Usage: %s <files>\n", argv[0]); 
return 1; 
} 
DIR *dp = opendir("."); 
struct dirent *de; 
if (dp == NULL) { 
perror("opendir"); 
return 1; 
} 
for (int i = 1; i < argc; i++) { 
int found = 0; 
rewinddir(dp);  // reset directory stream 
while ((de = readdir(dp)) != NULL) { 
if (strcmp(de->d_name, argv[i]) == 0) { 
found = 1; 
break; 
} 
} 
if (found) 
printf("File \"%s\" is present.\n", argv[i]); 
else 
printf("File \"%s\" NOT found.\n", argv[i]); 
} 
closedir(dp); 
return 0; 
} 
Q4.2#include <stdio.h> 
#include <stdlib.h> 
#include <unistd.h> 
#include <signal.h> 
void sighup() { 
printf("Child received SIGHUP\n"); 
} 
void sigint() { 
printf("Child received SIGINT\n"); 
} 
void sigquit() { 
printf("My Papa has Killed me!!!\n"); 
exit(0); 
} 
int main() 
{ 
pid_t pid = fork(); 
if (pid < 0) { 
perror("fork"); 
return 1; 
} 
if (pid == 0) {             
// Child 
signal(SIGHUP, sighup); 
signal(SIGINT, sigint); 
signal(SIGQUIT, sigquit); 
while (1) pause();     
} 
else {                     
 // Wait for signals 
 // Parent 
sleep(1);              
 // allow child to set handlers 
for (int i = 0; i < 5; i++) { 
kill(pid, (i % 2 == 0) ? SIGHUP : SIGINT); 
sleep(3); 
} 
kill(pid, SIGQUIT);     
} 
return 0; 
} 
