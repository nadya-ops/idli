Q6.1#include <stdio.h> 
#include <dirent.h> 
#include <sys/stat.h> 
#include <time.h> 
int main() { 
DIR *d = opendir("."); 
struct dirent *de; 
struct stat st; 
int month; 
printf("Enter month (1-12): "); 
scanf("%d", &month); 
while ((de = readdir(d)) != NULL) { 
stat(de->d_name, &st); 
struct tm *t = localtime(&st.st_mtime); 
if (t->tm_mon + 1 == month) 
printf("%s\n", de->d_name); 
} 
return 0; 
} 
Q6.2#include <stdio.h> 
#include <sys/wait.h> 
#include <unistd.h> 
#include <sys/resource.h> 
int main() { 
int n; 
printf("Enter n: "); 
scanf("%d", &n); 
for (int i = 0; i < n; i++) 
if (fork() == 0) return 0;   // child exits 
for (int i = 0; i < n; i++) 
wait(NULL); 
struct rusage ru; 
getrusage(RUSAGE_CHILDREN, &ru); 
printf("User time: %ld\n", ru.ru_utime.tv_sec); 
printf("System time: %ld\n", ru.ru_stime.tv_sec); 
return 0; 
} 
